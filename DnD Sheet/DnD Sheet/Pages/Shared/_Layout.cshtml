    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DnD_Sheet.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg" href="./logo.svg"
</head>
<body>
    <header>
