<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnD Sheet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="your-bootstrap-integrity-value" crossorigin="anonymous" />
    <link rel="stylesheet" href="./css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="./DnD_Sheet.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="./logo.svg" id="favicon"/>
</head>
<body class=" d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="./">
                    <img src="./logo.svg" alt="logo" width="30" height="24" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">DnD Sheet</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <button class="btn mb-3" type="button">User#0000</button>
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="./">Domů</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#">Tvorba postavy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#">Návody</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/Privacy">Privacy</a>
                            </li>
                        </ul>
                        <div class="position-absolute bottom-0 start-50 translate-middle-x w-100 p-3">
                            <div class="d-flex justify-content-between align-items-end flex-wrap">
                                <div class="nav-item btn-group dropdown dropup">
                                    <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Jazyk
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                                        <li><a class="dropdown-item" href="#">Čeština</a></li>
                                        <li><a class="dropdown-item" href="#">English</a></li>
                                    </ul>
                                </div>
                                <button class="btn" type="button" id="switchLightMode">Světlý režim</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex flex-wrap justify-content-between align-items-center text-center pt-3 my-4 border-top px-2">
        <div class="col-12 col-md-5 text-center text-md-start">
            <a class="text-decoration-none lh-1" href="/Index">
                <img src="./logo.svg" alt="logo" width="30" height="24" class="d-inline-block align-text-top">
            </a>
            <span>&copy; 2024 Šafránek David - DnD Sheet</span>
        </div>

        <ul class="col-12 col-md-7 nav justify-content-center justify-content-md-end align-items-center text-center text-md-end">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="./">Domů</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">Tvorba postavy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">Návody</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/Privacy">Privacy</a>
            </li>
        </ul>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>